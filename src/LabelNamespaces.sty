\newcommand{\CurrentNamespace}{}
\newcommand{\UsingNamespace}[1]{\renewcommand{\CurrentNamespace}{#1}}
\newcommand{\LocalName}[1]{\CurrentNamespace::#1}

\newcommand{\CurrentMasterNamespace}{}
\newcommand{\UsingMasterNamespace}[1]{\renewcommand{\CurrentMasterNamespace}{#1}}
\newcommand{\MasterName}[1]{\CurrentMasterNamespace::#1}

\newcommand{\UsingNestedNamespace}[2]{
  \UsingNamespace{#1::#2}
  \UsingMasterNamespace{#1}
}

\newcommand{\LocalLabel}[1]{\label{\LocalName{#1}}}